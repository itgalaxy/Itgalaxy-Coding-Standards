{
    "name": "itgalaxy/itgalaxy-coding-standards",
    "description": "PHP_CodeSniffer rules (sniffs) to enforce Itgalaxy coding conventions",
    "keywords": ["phpcs", "standards", "Itgalaxy", "itgalaxy"],
    "license": "MIT",
    "authors": [{
        "name": "Contributors",
        "homepage": "https://github.com/itgalaxy/Itgalaxy-Coding-Standards/graphs/contributors"
    }],
    "require": {
        "php": "^5.5.0 || ^7.0",
        "squizlabs/php_codesniffer": "^2.7.0",
        "simplyadmire/composer-plugins" : "@dev",
        "wimg/php-compatibility": "^7.1.2",
        "drupal/coder": "dev-8.x-2.x"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5.0",
        "phpunit/php-code-coverage": "^4.0.0"
    },
    "support": {
        "issues": "https://github.com/itgalaxy/Itgalaxy-Coding-Standards/issues"
    },
    "scripts": {
        "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths ../../..",
        "post-update-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths ../../..",

        "phpunit": "phpunit --filter ItgalaxyCodingStandards",
        "test": "@phpunit"
    }
}
